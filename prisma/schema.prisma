// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id Int @id @default(autoincrement())

  adminUsername String
  email String
  adminPassword String
}

model StoreApp {
  id Int @id @default(autoincrement())

  name          String
  category      String
  description   String
  rating        Float
  price         Float
  downloads     Int
  reviews       Review[]
  isVerified    Boolean

  developerId   Int
  developer     Developer @relation(fields: [developerId], references: [id])
}

model Developer {
  id Int @id @default(autoincrement())

  username String
  email String
  password String
  apps StoreApp[]
}

model User {
  id Int @id @default(autoincrement())
  username String
  email String
  password String
  reviews Review[]

  firstName String?
  lastName String?
}

model Review {
  id            Int @id @default(autoincrement())
  text          String
  rating        Int
  user          User @relation(fields: [userId], references: [id])
  userId        Int
  app           StoreApp    @relation(fields: [appId], references: [id])
  appId         Int
}